<div class="form-group">
		<button name="left" class="alignment btn default-btn">
			<span class="glyphicon glyphicon-align-left"></span>
		</button>
		<button name="center" class="alignment btn default-btn">
			<span class="glyphicon glyphicon-align-center"></span>
		</button>
		<button name="right" class="alignment btn default-btn">
			<span class="glyphicon glyphicon-align-right"></span>
		</button>
		<button name="none" class="alignment btn default-btn">
			X
		</button>
</div>
<div class="form-group">
	<input type="number" 
		   class="form-control" 
		   name="font-size" 
		   placeholder="size"
		   value="<%= fontSize %>"
	>
</div>
<div class="form-group">
	<input class="form-control"
		   autofocus	 
	       name="content" 
		   placeholder="text" 
		   type="text"
		   value="<%= content %>"
	>
</div>
<div class="form-group">
	<button class="btn btn-danger destroy">DESTROY</button>
</div>

