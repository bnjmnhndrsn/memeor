<div class="form-group">
		<button name="left" class="btn default-btn">
			<span class="glyphicon glyphicon-align-left"></span>
		</button>
		<button name="center" class="btn default-btn">
			<span class="glyphicon glyphicon-align-center"></span>
		</button>
		<button name="right" class="btn default-btn">
			<span class="glyphicon glyphicon-align-right"></span>
		</button>
</div>
<div class="form-group">
	<input type="number" 
		   class="form-control" 
		   name="font-size" 
		   placeholder="size"
		   value="<%= fontSize %>"
	>
</div>
<div class="form-group">
	<input class="form-control" 
	       name="content" 
		   placeholder="text" 
		   type="text"
		   value="<%= content %>"
	>
</div>
