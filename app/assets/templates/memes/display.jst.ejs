<div class="page-header text-center">
	<h2><%= meme.image().get("title") %></h2>
</div>
<div class="row">
	<div class="info-container col-xs-4">
		<p>
			<h4>
				Created <%= meme.get("time_words")%> ago by <a href="#">user</a>
			</h4>
		</p>
		<p>
			<a 
			href="<%= "/#/memes/" + meme.id + "/fork" %>"
			class="btn btn-lg btn-default fork">
				Fork it!
			</a>
		</p>
		<% if (editable) { %>
		<p>
			<a 
			href="<%= "/#/memes/" + meme.id + "/edit" %>"
			class="btn btn-lg btn-default edit">
				Edit it!
			</a>
		</p>
		<% } %>
		<p>
			<a 
			href="#"
			class="btn btn-lg btn-default">
				Share it!
			</a>
		</p>
	</div>
	<div class="image-container col-xs-8 text-center">
	<img src="<%= meme.get("cached_image") %>">
	</div>
</div>
