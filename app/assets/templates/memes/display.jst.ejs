<div class="page-header text-center">
	<h2><%= meme.image().get("title") %></h2>
</div>
<div class="row">
	<div class="info-container col-xs-6 text-center">
		<p>
			<h4>
				Created <%= meme.get("time_words")%> ago.
			</h4>
		</p>
		<p>
			<a 
			href="<%= "/#/memes/" + meme.id + "/fork" %>"
			class="btn btn-lg btn-success fork">
				Fork this meme!
			</a>
		</p>
		<% if (editable) { %>
		<p>
			<a 
			href="<%= "/#/memes/" + meme.id + "/edit" %>"
			class="btn btn-lg btn-warning edit">
				Edit this meme!
			</a>
		</p>
		<% } %>
		<p>
			<a 
			href="#"
			class="btn btn-lg btn-info">
				Share this meme!
			</a>
		</p>
	</div>
	<div class="image-container col-xs-6 text-center">
	<img src="<%= meme.get("cached_image") %>">
	</div>
</div>
